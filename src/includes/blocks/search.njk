<form
  class="header__search search font-theme font-theme--code"
  method="get"
  name="search-form"
  action="/search/"
  id="search-form"
>
  <div class="search__control">
    <label
      class="visually-hidden"
      for="search-field"
    >
      Поиск
    </label>
    <input
      class="search__input"
      id="search-field"
      type="text"
      autocomplete="off"
      name="query"
      placeholder="Что ищете?"
      {% if isSearchPage %}aria-describedby="search-hint"{% endif %}
    >
    <span class="search__key search__key--enter hotkey">
      Искать <kbd>↲</kbd>
    </span>
  </div>

  <div class="search__suggestion search__suggestion--hide">
    <div class="search__suggestion-content font-theme font-theme--text">
      <ul class="suggestion-list base-list"></ul>
    </div>

    <a class="search__full-link link font-theme font-theme--text" href="/search/">
      Расширенный поиск
    </a>
  </div>
</form>
